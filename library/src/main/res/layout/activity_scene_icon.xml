<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/charm_home_default"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingBottom="19dp"
        android:paddingLeft="23dp"
        android:paddingRight="30dp"
        android:paddingTop="19dp">

        <TextView
            android:id="@+id/tv_scene_mode_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="情景名称"
            android:textColor="@color/charm_home_welcome_gray_tx" />

        <EditText
            android:id="@+id/tv_scene_mode_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/tv_scene_mode_left"
            android:background="@color/white"
            android:drawablePadding="10dp"
            android:hint="请输入情景名称"
            android:textColor="@color/charm_home_house_txt"
            android:textColorHint="@color/charm_home_welcome_gray_tx"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img_scene_mode_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/icon_family_manager_close" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingLeft="23dp"
        android:paddingTop="12dp"
        android:text="请选择您喜欢的图标"
        android:textColor="@color/charm_home_house_txt" />

    <GridView
        android:id="@+id/gv_scene_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:gravity="center"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        android:horizontalSpacing="15dp"
        android:numColumns="4"
        android:verticalSpacing="15dp" />

</LinearLayout>