<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/charm_home_default"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:text="设备"
        android:textColor="@color/black" />

    <www.jinke.com.charmhome.widget.MyGridView
        android:id="@+id/gv_charm_home_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="@dimen/base_dimen_15"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:padding="16dp"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/base_dimen_15" />
</LinearLayout>