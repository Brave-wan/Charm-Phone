<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/charm_home_default"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rg_scene_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_scene_delay_immediately"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:button="@null"
            android:drawableRight="@drawable/select_scene_action"
            android:paddingBottom="15dp"
            android:paddingLeft="23dp"
            android:paddingRight="30dp"
            android:paddingTop="15dp"
            android:text="立即" />

        <RadioButton
            android:id="@+id/rb_scene_delay_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:button="@null"
            android:drawableRight="@drawable/select_scene_action"
            android:paddingBottom="15dp"
            android:paddingLeft="23dp"
            android:paddingRight="30dp"
            android:paddingTop="15dp"
            android:text="1秒" />

        <RadioButton
            android:id="@+id/rb_scene_delay_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:button="@null"
            android:drawableRight="@drawable/select_scene_action"
            android:paddingBottom="15dp"
            android:paddingLeft="23dp"
            android:paddingRight="30dp"
            android:paddingTop="15dp"
            android:text="2秒" />

        <RadioButton
            android:id="@+id/rb_scene_delay_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:button="@null"
            android:drawableRight="@drawable/select_scene_action"
            android:paddingBottom="15dp"
            android:paddingLeft="23dp"
            android:paddingRight="30dp"
            android:paddingTop="15dp"
            android:text="3秒" />

        <RadioButton
            android:id="@+id/rb_scene_delay_for"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:button="@null"
            android:drawableRight="@drawable/select_scene_action"
            android:paddingBottom="15dp"
            android:paddingLeft="23dp"
            android:paddingRight="30dp"
            android:paddingTop="15dp"
            android:text="4秒" />

        <RadioButton
            android:id="@+id/rb_scene_delay_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:button="@null"
            android:drawableRight="@drawable/select_scene_action"
            android:paddingBottom="15dp"
            android:paddingLeft="23dp"
            android:paddingRight="30dp"
            android:paddingTop="15dp"
            android:text="5秒" />

        <RadioButton
            android:id="@+id/rb_scene_delay_customize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:button="@null"
            android:drawableRight="@drawable/icon_charm_home_arrow"
            android:paddingBottom="15dp"
            android:paddingLeft="23dp"
            android:paddingRight="30dp"
            android:paddingTop="15dp"
            android:text="自定义时间" />
    </RadioGroup>
</LinearLayout>